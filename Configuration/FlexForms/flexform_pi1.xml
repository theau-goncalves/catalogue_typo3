<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Function</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>Select function</label>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0">
										<numIndex index="0">Liste des Categorie</numIndex>
										<numIndex index="1">Category->list;Category->show;Produit->show</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">Liste de Marchand</numIndex>
										<numIndex index="1">Marchand->list;Marchand->show</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">Tout les Produits</numIndex>
										<numIndex index="1">Produit->list</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="0">Remontée de Prduits</numIndex>
										<numIndex index="1">Produit->focus</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</switchableControllerActions>
					<!-- startingpoint -->
					<settings.detailsProduits>
						<TCEforms>
							<label>Page détail produit</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
										<default>
											<searchWholePhrase>1</searchWholePhrase>
										</default>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.detailsProduits>
				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>
